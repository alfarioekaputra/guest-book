{% extends "layouts/app" %}

{% block content %}
<div class="page-header">
  <div class="row align-items-center">
    <div class="col">
      <h2 class="page-title">
        Jabatan
      </h2>
    </div>
    <div class="col-auto ms-auto">
      <div class="btn-list">
        <button type="button" class="btn btn-primary" onclick="openGlobalModal('{{ url_to('Position::new') }}', 'Tambah Data', '{{ url_to('Position::store') }}')">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
            stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          Tambah Data
        </button>
      </div>
    </div>
  </div>
</div>

<div class="table-responsive mt-5">
  <table id="dataTable" class="table">
    <thead class="sticky-top">
      <tr>
        <th>NO</th>
        <th>Nama</th>
        <th>Slug</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody class="table-body">

    </tbody>
  </table>
</div>
{% endblock content %}

{% block javascript %}
<script type="text/javascript">
  $(document).ready(function () {
    // Ambil CSRF token dari meta tag
    const csrfToken = $('meta[name="csrf-token"]').attr('content');

    // Konfigurasi AJAX global
    $.ajaxSetup({
      headers: {
        'X-CSRF-TOKEN': csrfToken
      }
    });

    window.dataTable = $('#dataTable').DataTable({
      "processing": true,
      "serverSide": true,
      "ordering": true,
      "scrollX": true,
      "oLanguage": {
        "sLengthMenu": "Tampilkan _MENU_ data per halaman",
        "sSearch": "Pencarian: ",
        "sZeroRecords": "Maaf, tidak ada data yang ditemukan",
        "sInfo": "Menampilkan _START_ s/d _END_ dari _TOTAL_ data",
        "sInfoEmpty": "Menampilkan 0 s/d 0 dari 0 data",
        "sInfoFiltered": "(di filter dari _MAX_ total data)",
        "oPaginate": {
          "sFirst": "<<",
          "sLast": ">>",
          "sPrevious": "<",
          "sNext": ">"
        }
      },
      "ajax": {
        "url": "{{ site_url('admin/master/position/ajaxList') }}",
        "type": "POST",
        "async": true,
        "error": function (xhr, error, code) {
          if (xhr.status === 403) {
            alert('Session expired or CSRF token mismatch. Redirecting to login...');
            window.location.href = '/login';
          }
        }
      },
      "columnDefs": [{
        "targets": [],
        "orderable": false,
      }],
      "columns": [{
        data: 'no'
      },
      {
        data: 'name'
      },
      {
        data: 'slug'
      },
      {
        data: null,
        render: function (data, type, row) {

          return `
                <a class="btn btn-md btn-primary" onclick="openGlobalModal('{{ site_url('admin/master/position') }}/${row.id}/edit', 'Edit Data', '{{ url_to('Position::store') }}')">Edit</a>
                <a class="btn btn-md btn-danger" onclick="deleteData(${row.id})">Delete</a>
              `
        }
      }
      ]
    });

    // Fungsi untuk menghapus data dengan Bootbox
    window.deleteData = function(id) {
        bootbox.confirm({
            title: "Konfirmasi Hapus",
            message: "Apakah Anda yakin? Data yang dihapus tidak dapat dikembalikan!",
            buttons: {
                cancel: {
                    label: '<i class="fa fa-times"></i> Batal',
                    className: 'btn-secondary'
                },
                confirm: {
                    label: '<i class="fa fa-check"></i> Ya, hapus!',
                    className: 'btn-danger'
                }
            },
            callback: function(result) {
                if (result) {
                    $.ajax({
                        url: "{{ site_url('admin/master/position/') }}/" + id,
                        type: 'DELETE',
                        headers: {
                          'X-CSRF-TOKEN': csrfToken
                        },
                        dataType: 'json',
                        success: function(response) {
                            if (response.success) {
                                bootbox.alert({
                                    title: "Terhapus!",
                                    message: response.message,
                                    callback: function() {
                                        $('#dataTable').DataTable().ajax.reload();
                                    }
                                });
                            } else {
                                bootbox.alert({
                                    title: "Error!",
                                    message: response.message
                                });
                            }
                        },
                        error: function() {
                            bootbox.alert({
                                title: "Error!",
                                message: "Terjadi kesalahan pada server"
                            });
                        }
                    });
                }
            }
        });
    };
  });
</script>
{% endblock javascript %}